{{define "index"}}
{{template "nav_index" .Title}}
    <div class="container central_view">
		{{template "index_top_logged_out" .User}}
        {{with .NewImages}}
        {{range .}}
        <div class="row">
			<div class="card">
				<div class="card-header">
					<h6 class="card_h6">{{.User}}</h6>
					<div class="card_date">{{.Date}}</div>
				</div>
				<img src="{{.ImagePath}}" class="card-img-top" alt="">
				<div class="card-body">
					<h6 class="card-title bold-title">Gef√§llt {{.Likes}} Leuten</h6>
					<p class="card-text">{{.Description}}</p>
				</div>
				<div class="card-footer">
                    {{range .Comments}}
					<p class="card-text">
						<span class="bold-title">{{.User}}</span>
						{{.Comment}}
					</p>
                    {{end}}
				</div>
			</div>
		</div>
        {{end}}
        {{end}}

{{template "footer"}}
{{end}}